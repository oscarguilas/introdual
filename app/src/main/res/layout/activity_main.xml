<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="184dp"
        android:text="@string/questionExample"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCorrect"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/textQuestion"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="115dp"
        android:layout_marginStart="115dp"
        android:text="@string/buttonCorrect"

        android:onClick="optionSelect"
        />
    <Button
        android:id="@+id/buttonIncorrect"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/textQuestion"
        app:layout_constraintLeft_toRightOf="@id/buttonCorrect"

        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:text="@string/buttonIncorrect"
        />

</androidx.constraintlayout.widget.ConstraintLayout>